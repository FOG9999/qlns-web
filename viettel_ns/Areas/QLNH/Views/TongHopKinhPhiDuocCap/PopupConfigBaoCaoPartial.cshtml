@{
    ViewBag.Title = "Cấu hình in báo cáo";
}
<div class="panel panel-danger">
    <div class="panel-heading">
        <span class="text-uppercase font-l">@ViewBag.Title</span>
    </div>
    <div class="panel-body">
        <div class="">
            <div class="form-group row">
                <div class="col-sm-12">
                    <label for="txtTieuDe">Tiêu đề báo cáo</label>
                    @Helpers.Required()
                    <div>
                        <textarea id="txtTieuDe" required class="form-control" maxlength="250">BÁO CÁO ĐỐI CHIẾU TỔNG HỢP SỐ LIỆU KINH PHÍ THỰC HIỆN CẤP PHÁT THANH TOÁN TOÀN QUÂN</textarea>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-8">
                    <label for="txtDonViCapTren">Đơn vị cấp trên</label>
                    @Helpers.Required()
                    <div>
                        <textarea id="txtDonViCapTren" required class="form-control" maxlength="150"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-8">
                    <label for="txtDonViCapDuoi">Đơn vị cấp dưới</label>
                    @Helpers.Required()
                    <div>
                        <textarea id="txtDonViCapDuoi" required class="form-control" maxlength="150"></textarea>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row text-center">
                <a class="btn-mvc btn-mvc-green btn-print" data-ext="pdf"><i class="fa fa-print"></i> In báo cáo</a>
                <a class="btn-mvc btn-mvc-green btn-print" data-ext="xls"><i class="fa fa-file-excel"></i>Xuất excel</a>
                <span class="text-muted">|</span>
                <a class="btn-mvc" id="btnChuKy"><i class="fa fa-file-excel"></i>Sửa chữ ký</a>
                <a class="btn-mvc" id="btn-cancel" data-dismiss="modal">Hủy</a>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_ui_chuky")

@model Viettel.Models.QLVonDauTu.VDTThongTriModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
}

<div class="main">
    <div class="panel-list-item col-sm-12">
        <div class="card">
            <div class="card-body create_thdt">
                <div class="form-group">
                    <h4 class="color-text-red">Thông tin thông tri:</h4>
                    @*<div style="float: right; margin-top: -37px">
                        <button class="btn btn-info" onclick="Loc()"><i class="fa fa-search" aria-hidden="true"></i>Lọc</button>
                        <button class="btn btn-danger" onclick="XoaTextThongTri()">Xóa</button>
                    </div>*@
                    <input type="hidden" id="iID_ThongTriID" value="@Model.iID_ThongTriID" />
                    <hr class='color-background-red' />
                    <div class="form-group row">
                        <div class="col-sm-8">
                            <label for="txtDonViQuanLy">Đơn vị quản lý</label>
                            <input type="text" id="sSoQuyetDinh" class="form-control requireInput" value="@(Model.sTenDonVi)" name="sSoQuyetDinh" maxlength="100" autocomplete="off" disabled />
                        </div>

                        <div class="col-sm-4">
                            <label for="sNamThongTri">Năm làm việc</label>
                            <input type="text" id="sNamThongTri" class="form-control yearFormat" name="sNamThongTri" value="@Model.iNamThongTri" maxlength="100" autocomplete="off" disabled/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-8">
                            <label for="sMaNguonVon">Nguồn vốn</label>
                            <input type="text" id="sSoQuyetDinh" class="form-control requireInput" value="@Model.sTenNguonNganSach" name="sSoQuyetDinh" maxlength="100" autocomplete="off" disabled/>
                        </div>
                        <div class="col-sm-4">
                            <label for="iLoaiThongTri">Loại cấp phát</label>
                            <input type="text" id="sSoQuyetDinh" class="form-control requireInput" value="@Model.sLoaiThongTri" name="sSoQuyetDinh" maxlength="100" autocomplete="off" disabled/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label for="sMaThongTri">Mã thông tri</label>
                            <input type="text" id="sMaThongTri" class="form-control requireInput" name="sMaThongTri" value="@Model.sMaThongTri" maxlength="50" autocomplete="off" disabled/>
                        </div>
                        <div class="col-sm-4">
                            <label for="dNgayThongTri">Ngày lập</label>
                            <div class='input-group date'>
                                <input type='text' class="form-control requireInput dateFormat" value="@(Model.dNgayThongTri.HasValue ? Model.dNgayThongTri.Value.ToString("dd/MM/yyyy") : string.Empty) " id="dNgayThongTri" name="dNgayThongTri" autocomplete="off" disabled />
                                <span class="btn-default input-group-addon">
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <label for="iNamNganSach">Năm ngân sách</label>
                            <input type="text" id="sNamThongTri" class="form-control yearFormat" name="sNamThongTri" value="@Model.iNamNganSach" maxlength="100" autocomplete="off" disabled />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label for="sMoTa">Mô tả thông tri</label>
                            <input type="text" id="sMoTa" class="form-control requireInput" name="sMoTa" value="@Model.sMoTa" autocomplete="off" disabled />
                        </div>
                    </div>

                    @*fdfg*@
                <div class="form-group">
                    <h4 class="color-text-red">Thông tri chi tiết</h4>
                    <hr class='color-background-red' />


